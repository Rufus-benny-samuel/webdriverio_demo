{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": [
		"google"
	],
	"ignorePatterns": [
		"./node_modules"
	],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"require-jsdoc": 0,
		"max-len": [
			"error",
			{
				"code": 120
			}
		],
		"camelcase": "off",
		"allowIndentationTabs": true
	}
}